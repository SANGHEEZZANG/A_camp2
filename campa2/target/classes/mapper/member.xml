<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberns">
	<resultMap type="campa.model.memberDTO" id="mem">
		<result property="id" column="id" />
		<result property="no" column="no" />
		<result property="passwd" column="passwd" />
		<result property="name" column="name" />
		<result property="phone" column="phone" />
		<result property="email" column="email" />
		<!-- <result property="domain" column="domain" /> -->
		<result property="post" column="post" />
		<result property="address" column="address" />
		<result property="reg_date" column="reg_date" />
		<result property="status" column="status" />
		<result property="del_date" column="del_date" />
		<result property="reset_password_token" column="reset_password_token" />
		
	</resultMap>
	
	<!-- logInForm:  -->
	<select id="checkUser" parameterType="String" resultType="mem">
	select * from MEMBER where (id=#{id} and status='1')
	</select>
<!-- 	<select id="login" parameterType="String" resultType="mem">
	select * from member where passwd=#{passwd}
	</select> -->
	<!-- signUpPage:  -->
	<select id="selectID" parameterType="mem" resultType="mem" >
	select * from member where id=#{id}
	</select>
	<insert id="insert" parameterType="mem">
	insert into member (id, no, passwd, name, phone, email, post, address, reg_date,status)
	values(#{id},member_id_seq.nextval,#{passwd},#{name},#{phone},#{email},#{post},#{address},sysdate, 1)
	</insert>
	
	<!--myPageUpdateForm:  -->
	<update id="update" parameterType="mem">
	update member set phone=#{phone}, email=#{email}, post=#{post}, address=#{address}
	where id=#{id}
	</update>
	<delete id="delete" parameterType="mem">
	delete from member where passwd=#{passwd} and name=#{name}
	</delete>
	
	
	
	
</mapper>